<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="account" extends="default">

        <action name="login" class="loginAction">
            <result type="redirect">/</result>
            <result name="input">/login.jsp</result>
            <result name="success" type="redirect">/index</result>
        </action>

        <action name="logout" class="logoutAction">
            <result type="redirect">/</result>
        </action>

        <action name="index" method="index" class="userAction">
            <result name="admin" type="freemarker">/pages/adminuser.vtl</result>
            <result name="user" type="freemarker">/pages/doclist.vtl</result>
        </action>
    </package>
</struts>
